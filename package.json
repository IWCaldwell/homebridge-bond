{
  "name": "homebridge-bond",
  "version": "4.0.0",
  "description": "A homebridge plugin to control your Bond devices over the v2 API. Compatible with Homebridge V1.6+ and V2.",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts",
    "watch": "npm run build && npm link && nodemon",
    "dev": "tsc --watch & nodemon dist",
    "build": "rimraf ./dist && tsc -p tsconfig-build.json",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "mocha",
    "coverage": "nyc -r lcov -e .ts -x \"*.spec.ts\" npm run test"
  },
  "keywords": [
    "homebridge-plugin",
    "bond",
    "bond-home",
    "rf",
    "ir"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/aarons22/homebridge-bond.git"
  },
  "bugs": {
    "url": "http://github.com/aarons22/homebridge-bond/issues"
  },
  "engines": {
    "node": ">=18.16.0",
    "homebridge": ">=1.6.0 || >=2.0.0-beta.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/flake-idgen": "^0.1.30",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.19.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chai": "^4.3.0",
    "eslint": "^8.57.0",
    "homebridge": "^1.11.0",
    "mocha": "^10.0.0",
    "nodemon": "^3.1.7",
    "nyc": "^17.0.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "axios-retry": "^4.5.0",
    "biguint-format": "^1.0.2",
    "flake-idgen": "^1.4.0"
  },
  "homepage": "https://github.com/aarons22/homebridge-bond#readme",
  "author": "Aaron Sapp"
}
